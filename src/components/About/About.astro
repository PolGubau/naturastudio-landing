---
import profileImage from "@images/nuria.webp";
import siteData from "@config/siteData.json";
import { Image } from "astro:assets";
import Paraules from "./Paraules.astro";
---

<section id="sobre-mi" class="relative">
	<div class="texture-bg py-10 md:py-20">
		<div class="site-container flex flex-col md:flex-row">
			<div class="md:w-2/3">
				<h2 class="h3 text-primary-500 text-pretty uppercase">Conoce a la fotógrafa</h2>
				<h3 class="h2 mt-4">{siteData.author}</h3>
				<div class="bg-secondary-200/60 mt-8 p-8 md:mb-20 lg:text-lg">
					<p>
						¡Hola! Soy <strong>Nuria Fluvia</strong>, una apasionada fotógrafa y diseñadora gráfica
						de 26 años. Mi travesía en el mundo de la imagen comenzó por la capacidad de ver las
						fotografías y el diseño gráfico para contar historias y <strong>transmitir</strong> emociones
						únicas.
					</p>
					<div class="flex w-3/4 justify-end">
						<p class="font-heading text-3xl italic">- Nuria</p>
					</div>
				</div>
			</div>
			<div class="mr-auto max-w-md md:w-1/3 md:max-w-none">
				<div class="my-auto aspect-[3/4] w-full overflow-hidden md:-ml-4 md:rotate-6">
					<Image
						src={profileImage}
						alt="Jenna Marie"
						width={450}
						densities={[1.5, 2]}
						class="h-auto min-h-full w-full min-w-full object-cover"
					/>
				</div>
			</div>
		</div>
	</div>
	<img
		src="/images/media/flowers/flors_web_1.svg"
		alt="Logo"
		class="absolute -top-4 right-2 w-20 md:-top-20 md:left-1/2 md:w-34"
	/>
	<img
		src="/images/media/flowers/flors_web_2.svg"
		alt="Logo"
		class="absolute bottom-4 left-0 w-20 translate-x-[90px] md:-bottom-20 md:left-1/4 md:w-34 md:-rotate-12"
	/>
</section>

<Paraules />

